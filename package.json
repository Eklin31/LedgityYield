{
  "name": "ledgity-yield",
  "version": "1.138.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "cc:test": "forge test -vvv --use 0.8.18",
    "cc:size": "hardhat size-contracts",
    "cc:slither:report": "slither . --compile-force-framework hardhat --checklist > report.md ",
    "cc:slither:triage": "slither . --compile-force-framework hardhat --triage-mode",
    "cc:slither:pausable": "slither . --compile-force-framework hardhat --print not-pausable",
    "cc:node": "hardhat node --hostname 0.0.0.0",
    "cc:compile": "hardhat compile && hardhat export --export-all contracts/deployments.json && wagmi generate",
    "graph:node": "cd subgraph/local-node && docker-compose up",
    "graph:local-build": "cd subgraph && graph codegen ./localhost-subgraph.yaml && graph build ./localhost-subgraph.yaml",
    "graph:local-create": "graph create --node http://0.0.0.0:8020/ localhost-subgraph ",
    "graph:local-remove": "graph remove --node http://0.0.0.0:8020/ localhost-subgraph",
    "graph:local-deploy": "graph deploy --node http://0.0.0.0:8020/ --ipfs http://0.0.0.0:5001 localhost-subgraph ./subgraph/localhost-subgraph.yaml"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@rainbow-me/rainbowkit": "^1.0.8",
    "@t3-oss/env-nextjs": "^0.6.0",
    "@tanstack/react-table": "^8.9.3",
    "@wagmi/core": "^1.3.8",
    "chart.js": "^4.3.3",
    "chartjs-adapter-luxon": "^1.3.1",
    "clsx": "^1.2.1",
    "d3-format": "^3.1.0",
    "gsap": "^3.12.2",
    "lodash.merge": "^4.6.2",
    "lokijs": "^1.5.12",
    "luxon": "^3.4.0",
    "next": "13.4.13",
    "react": "18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "remixicon": "^3.5.0",
    "sharp": "^0.32.4",
    "viem": "^1.5.4",
    "wagmi": "^1.3.9",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphprotocol/client-cli": "^3.0.0",
    "@graphprotocol/graph-ts": "^0.31.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/d3-format": "^3.0.1",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "20.4.9",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "@wagmi/cli": "^1.3.0",
    "autoprefixer": "10.4.14",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.13",
    "ethers": "^6.7.0",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.34",
    "pino-pretty": "^10.2.0",
    "postcss": "8.4.26",
    "prettier": "^3.0.1",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-solidity": "^1.1.3",
    "semantic-release": "^21.0.7",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
